{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file with OpenCV",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe", // Switch to g++ for C++ support
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",                                  // Source file to compile
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe", // Output executable
                "-IC:\\Users\\USER\\Desktop\\DigitRecognizer\\opencv\\opencv-mingw\\include",            // Include OpenCV headers
                "-LC:\\Users\\USER\\Desktop\\DigitRecognizer\\opencv\\opencv-mingw\\x64\\mingw\\lib",     // Link OpenCV library directory
                "-lopencv_core4100",                           // Link required OpenCV libraries
                "-lopencv_imgcodecs4100",
                "-lopencv_highgui4100"
            ],
            "options": {
                "cwd": "${fileDirname}" // Set the working directory
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task modified for OpenCV support."
        }
    ],
    "version": "2.0.0"
}
